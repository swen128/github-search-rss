{
  "name": "github-search-rss",
  "version": "1.0.0",
  "description": "GitHub Search Results as RSS Feeds via GitHub Actions.",
  "homepage": "https://github.com/swen128/github-search-rss",
  "bugs": {
    "url": "https://github.com/swen128/github-search-rss/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swen128/github-search-rss.git"
  },
  "license": "MIT",
  "author": "swen128",
  "sideEffects": false,
  "main": "lib/github-search-rss.js",
  "types": "lib/github-search-rss.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "bin/",
    "lib/",
    "module/",
    "src/"
  ],
  "scripts": {
    "main": "ts-node-transpile-only src/index.ts",
    "build": "tsc -p .",
    "clean": "rimraf lib/ module/",
    "prepare": "git config --local core.hooksPath .githooks",
    "prepublishOnly": "npm run clean && npm run build",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "test": "mocha \"test/**/*.ts\"",
    "watch": "tsc -p . --watch"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@types/xml": "^1.0.5",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "ts-node-test-register": "^9.0.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@octokit/graphql": "^4.6.0",
    "@octokit/graphql-schema": "^10.24.1",
    "dayjs": "^1.10.4",
    "feed": "^4.2.2",
    "xml": "^1.0.1"
  }
}
